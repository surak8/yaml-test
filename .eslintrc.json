{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"object-curly-spacing": [
			"error",
			"always",
			{
				"objectsInObjects": false
			}
		],
		"array-bracket-spacing": [
			"error",
			"never",
			{
				"arraysInArrays": false
			}
		],
		"space-before-blocks": [
			"error",
			{
				"functions": "always",
				"keywords": "always",
				"classes": "always"
			}
		],
		"keyword-spacing": [
			"error",
			{
				"overrides": {
					"if": {
						"after": true
					},
					"for": {
						"after": true
					},
					"while": {
						"after": true
					},
					"static": {
						"after": true
					},
					"as": {
						"after": false
					}
				}
			}
		],
		"no-undef": "error",
		"no-undef-init": "error",
		"no-unused-vars": "warn",
		"no-empty": "warn",
		"no-unreachable": "off",
		"no-constant-condition": "warn",
		"no-undefined": "warn",
		//no-undef
		//no-undefined
		//no-undef
		"brace-style": [
			"error",
			"1tbs",
			//"allman",
			//"stroustrup",
			{
				"allowSingleLine": true
			}
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1,
				"maxEOF": 0,
				"maxBOF": 0
			}
		]
		// max
	}
}